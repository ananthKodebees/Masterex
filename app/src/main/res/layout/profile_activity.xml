<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:src="@drawable/image1"
            android:background="#95c7b3b3"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/etusername" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/edit"
            android:layout_marginTop="44dp"
            android:layout_marginRight="15dp"
            android:id="@+id/edit_image"
            android:onClick="editImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/books"
            android:id="@+id/profile_logo"
            android:layout_below="@+id/edit_image"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ananth"
            android:id="@+id/profile_name"
            android:textStyle="bold"
            android:textColor="#fdfcfc"
            android:layout_below="@+id/profile_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="15sp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courses Saved"
            android:id="@+id/button"
            android:layout_marginTop="42dp"
            android:background="#5b6276"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_below="@+id/profile_name"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/etuser"
           android:hint="Username"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etpass"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:hint="password"
            android:layout_below="@+id/etuser"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/etuser"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etfirst"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Firstname"
            android:layout_below="@+id/etpass"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/etpass"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etlast"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Lastname"
            android:layout_below="@+id/etfirst"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/etfirst"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_below="@+id/etlast"
            android:layout_marginLeft="30dp"
            android:id="@+id/button3"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</ScrollView>




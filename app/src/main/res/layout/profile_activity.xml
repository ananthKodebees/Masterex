<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/image1"
            android:background="#95c7b3b3"
            android:id="@+id/profile_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/etusername" />


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/edit"
            android:layout_marginTop="44dp"
            android:layout_marginRight="15dp"
            android:id="@+id/edit_image"
            android:onClick="editImage"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            android:id="@+id/button"
            android:background="#5b6276"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/profile_image"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/etuser"
            android:padding="20dp"
            android:editable="false"
            android:layout_marginLeft="85dp"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/etpass"
            android:padding="20dp"
            android:layout_marginLeft="85dp"
            android:layout_below="@+id/etuser"
            android:layout_alignEnd="@+id/etuser"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/etfirst"
            android:padding="20dp"
            android:layout_marginLeft="85dp"

            android:layout_below="@+id/etpass"

            android:layout_alignEnd="@+id/etpass"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/etlast"
            android:padding="20dp"
            android:layout_marginLeft="85dp"
            android:layout_below="@+id/etfirst"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/etfirst"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update"
            android:layout_below="@+id/etlast"
            android:layout_marginLeft="100dp"
            android:id="@+id/bupdate"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_marginBottom="15dp"
            android:textSize="18sp"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/etuser"


            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:id="@+id/textView8"
            android:layout_alignLeft="@+id/bupdate"
            android:layout_alignStart="@+id/bupdate"
            android:layout_alignBottom="@+id/etpass"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firstname"
            android:id="@+id/textView9"
            android:layout_marginBottom="15dp"
            android:layout_alignBottom="@+id/etfirst"
            android:textSize="18sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lastname"
            android:layout_marginBottom="15dp"
            android:id="@+id/textView10"
            android:textSize="18sp"
            android:layout_above="@+id/bupdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</ScrollView>




<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:id="@+id/discover_first_image"
        android:src="@drawable/image1"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Course On C"
        android:id="@+id/tvName"
        android:textColor="#fefefe"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingLeft="5dp"

        android:paddingTop="4dp"
        android:paddingBottom="0dp"
        android:layout_above="@+id/tvDate"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/discover_first_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="200 Participants"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"

        android:paddingBottom="1dp"
        android:id="@+id/tvPart"
        android:textColor="#fefefe"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/tvDate"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Course start date"
        android:id="@+id/tvDate"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:paddingTop="0dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/discover_first_image"
        android:layout_alignParentStart="true" />





</RelativeLayout>
